<!DOCTYPE html>
<html>
  <%- include('head') -%>
  <%- include('header') -%>
    <title><%= title %></title>
    <h2 class="col-12 text-center">Choose Shop</h2>
    <form action="" method="post" class="d-flex justify-content-center">
    <select name="shop" >
      <option value="all">All</option>
      <% shop.rows.forEach(function(s) { %> 
      <option value="<%= s.id %>" <%if (selectedShop == s.id){%>  selected  <%} %> ><%= s.id %> </option>
      <% }) %>
    </select>
    <button class="btn btn-primary" type="submit" >Oke</button>
  </form>
   
  <body>
    <h2> <%= message %></h2>
    <div id="ptable">
    <table class="table table-dark">
      <thead>
        <tr>
          <% products.fields.forEach(function(prodField) { %> 
          <td class="text-uppercase"><%= prodField.name %> </td>
          <%})%>
      </tr>
      </thead>
      <tbody>
        <tr class="table-active">
          ...
        </tr>
        <% products.rows.forEach(function(prodRow) { %>       
          <tr>
            <% products.fields.forEach(function(prodField) { %>  
                <td><%= prodRow[prodField.name] %> </td>
                <% }) %>
          </tr>
       <% }) %>
      </tbody>
    </table>
  </div>
    <script>
    window.setInterval('refresh()', 10000); 	
    function refresh() {
        window .location.reload();
    }

    </script>
  </body>
</html>
