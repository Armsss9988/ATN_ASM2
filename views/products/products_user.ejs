<!DOCTYPE html>
<html>
  <%- include('head') -%>
  <%- include('header') -%>
    <title><%= title %></title>   
  <body>
    <h2> <%= message %></h2>
    <table class="table table-dark">
      <thead>
        <tr>
          <% products.fields.forEach(function(prodField) { %> 
          <td class="text-uppercase"><%= prodField.name %> </td>
          <%})%>
      </tr>
      </thead>
      <tbody>
        <tr class="table-active">
          ...
        </tr>
        <% products.rows.forEach(function(prodRow) { %>       
          <tr>
            <form method="post">
            <% products.fields.forEach(function(prodField) { %>  
                <td>
                  <input name ="<%= prodField.name %>"  value="<%= prodRow[prodField.name]%>"<% if(prodField.name == 'id' || prodField.name == 'shop_id'){%>  disabled  <%} %>>
                </td>
                <% }) %>
              <td class="row">
                  <button type="submit" formaction="/products/edit/<%= prodRow.id %> ">Edit</button>
                  <button type="submit" formaction="/products/delete/<%= prodRow.id %>">Delete</button>
                  </td>
            </form>
          </tr>
       <% }) %>
          <tr>
            <form  method="post">
            <% products.fields.forEach(function(prodField) { %>
              <td>
                <input name ="<%= prodField.name %>" <% if(prodField.name == 'id' || prodField.name == 'shop_id'){%>  disabled  <%} %>>
              </td>
              <%})%>
              <td>
                <button type="submit" formaction="/products/create">Create</button>
              </td>
            </form>
          </tr>
      </tbody>
    </table>
  </body>
</html>
